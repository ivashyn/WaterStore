@model IEnumerable<Store.BLL.ModelsDTO.WaterDTO>
@{
    ViewBag.Title = "Home Page";
}


<div id="modDialog" class="modal fade">
    <div id="dialogContent" class="modal-dialog"></div>
</div>

<div class="row">
    @foreach (var water in Model)
    {
        <div class="col-md-3">
            <a href="Home/MakeOrder/?waterId=@water.Id" class="waterItem">@water.Provider</a>
            @*@Html.ActionLink(water.Provider, "ConfirmPurchase/?waterId=",
           new { id = water.Id }, new { @class = "waterItem" })*@
    </div>
    }
</div>

@section scripts
{
    <script type="text/javascript">

        $(function () {
            $.ajaxSetup({ cache: false });
            $(".waterItem").click(function (e) {

                e.preventDefault();
                $.get(this.href, function (data) {
                    $('#dialogContent').html(data);
                    $('#modDialog').modal('show');
                });
            });
        })
    </script>
}